@import "nib/vendor"
@import "normalize"

white = #FCF2ED
black = #210001
color-second-base = #FF8B79
color-accent = #DF1D0D
color-high = #D12B13
color-middle = #FF4E0D

footer-height = 150px


font-size-em(font_size)
  font-size: (font_size)em
  font-size: (font_size)rem


html, body
  width: 100%
  height: 100%
  font-family: 'Lucida Grande','Hiragino Kaku Gothic ProN', Meiryo, sans-serif

html
  font-size: 62.5%

body
  background-color: black
  color: #FF4E0D

  font-size-em 1.7


h1
  font-size-em 3.8
  line-height: 4rem
  // font-kerning normal  TODO: find a font is satisfy the conditions

h2
  font-size-em 2.9
  line-height: 2.5rem
  margin: 15px 0 10px 0

h3
  font-size-em 2.0


ul
  padding-left: 0  // clear default indent
  margin: 20px 0


li
  font-size-em 1.7
  line-height: 2.5rem
  list-style-type: none
  letter-spacing: 0.2rem
  border-bottom: solid 1px white


