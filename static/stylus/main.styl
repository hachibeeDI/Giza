button
  font-size-em 1.5
  padding: 10px 20px
  background-color: black
  color: white
  font-weight: bold
  border: solid 1px white
  &:hover
    //color: color-linkhover
  &:active
    // FIXME: not cool
    background-color: lighten(color-middle, 30%)
  &:disabled
    background-color: lighten(color-middle, 50%)

.header
  .title
    font-size-em 4.2

#target-projects
  margin-left: 20px


#main-content
  min-width: 320px
  width: 100%
  height: auto !important
  min-height: 100%
  overflow: hidden
  position: relative

#main
  margin: 0 auto
  width: 70%
  float: right

#sub
  margin: 0 auto
  width: 20%
  float: left
  background-color: black
  color: white
  padding-bottom: 10000px
  margin-bottom: -10000px
  .title
    color: white !important
#sub-container
  margin-left: 20px

#sub:after
  display: block
  visibility: hidden
  clear: both

#build-result
  margin-top: 50px
  border: solid 1px white
  width: 70%
  min-height: 50px
  background-color: color-middle
  color: white


#footer
  height: footer-height
  position: absolute
  bottom: 0


//[class^="icon-"]:before
.edit-list:before
  color: color-high
  background-color: white
  border-radius: 20px
  margin-right: 15px !important

.accordion
  margin-top: 15px


.accordion-face
  font-size-em 2.6

input.accordion-gimmick
  // cssオンリーのアコーディンのため、checkboxには犠牲になってもらう
  display: none

input.accordion-gimmick:checked
  & ~ .accordion-innner
    overflow: visible
    opacity: 1
    height: 100%
    li
      height: 35px

.accordion-innner
  overflow: hidden
  transition-property: opacity, height
  transition-duration: 0.5s
  transition-timing-function: ease-out
  opacity: 0
  height: 0%
  margin-top: 15px
  li
    transition: height 0.5s ease-out
    height: 0px

.project-operation
  margin-top: 0
  li
    display: inline-block


// TODO: jsとかでトグルなアレをアレする
.clickable-li
  cursor: pointer
.clickable-li:active
  background: black
  color: white


#save-panel
  input[name="heading-message"]
    margin-top: 30px
    display: block
    max-width: 400px
    min-width: 280px
    width: 65%
  textarea[name="details-message"]
    margin-top: 10px
    display: block
    max-width: 600px
    min-width: 320px
    width: 80%
    height: unit(15 * 3 + 25, 'px')
  .buttons
    margin: 20px auto
    button
      display: inline-block
  button[name="cancel"]
    margin-right: 10px


.growl-modal
  transition: all ease 1s
  opacity: 1
  background-color: color-middle
  color: white
  position: fixed
  min-width: 200px
  min-height: 100px
  top: 40%
  left: 40%
  padding: 20px
  border: 1px solid black

.growl-modal.ng-hide-add,
.growl-modal.ng-hide-remove
  display: block !important

.growl-modal.ng-hide
  background-color: black
  line-height: 0
  opacity: 0


::-moz-selection
    background: color-accent
    color: white

::selection
    background: color-accent
    color: white
