footer-height = 150px


font-size-em(font_size)
  font-size: unit(font_size, 'em')
  font-size: unit(font_size, 'rem')


html, body
  width: 100%
  height: 100%
  font-family: 'Lucida Grande','Hiragino Kaku Gothic ProN', Meiryo, sans-serif

html
  font-size: 62.5%

body
  background-color: white
  color: black

  font-size-em 1.7

input
  font-size-em 1.7

textarea
  font-size-em 1.7

h1
  font-size-em 3.8
  line-height: 4rem
  color: color-high
  // font-kerning normal  TODO: find a font is satisfy the conditions

h2
  font-size-em 2.9
  line-height: 2.5rem
  margin: 15px 0 10px 0
  color: color-middle

h3
  font-size-em 2.0


ul
  padding-left: 0  // clear default indent


li
  font-size-em 1.7
  line-height: 2.5rem
  list-style-type: none
  letter-spacing: 0.2rem
