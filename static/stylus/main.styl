button
  font-size-em 1.5
  padding: 8px 20px
  background-color: color-middle
  color: white
  font-weight: bold
  border: solid 1px white
  &:hover
    //color: color-linkhover
  &:active
    // FIXME: not cool
    background-color: lighten(color-middle, 30%)


.header
  .title
    font-size-em 4.2

#target-projects
  margin-left: 20px


#main-content
  min-width: 320px
  width: 100%
  height: auto !important
  min-height: 100%
  overflow: hidden
  position: relative

#main
  margin: 0 auto
  width: 70%
  float: right

#sub
  margin: 0 auto 0 30px
  width: 20%
  float: left
  background-color: color-high
  color: white
  padding-bottom: 10000px
  margin-bottom: -10000px

#sub:after
  display: block
  visibility: hidden
  clear: both

#build-result
  margin-top: 50px
  border: solid 1px white
  width: 70%
  min-height: 50px
  background-color: color-middle
  color: white


#footer
  height: footer-height
  position: absolute
  bottom: 0


// TODO: jsとかでトグルなアレをアレする
.clickable-li
  cursor: pointer
.clickable-li:active
  background: black
  color: white

#save-panel
  input, textarea
    display: block
  button
    display: inline-block


.growl-modal
  transition: all ease 0.5s
  opacity: 1
  background-color: color-middle
  color: white
  position: fixed
  min-width: 200px
  min-height: 100px
  top: 40%
  left: 40%
  padding: 20px
  border: 1px solid black

.growl-modal.ng-hide-add,
.growl-modal.ng-hide-remove
  display: block !important

.growl-modal.ng-hide
  background-color: black
  line-height: 0
  opacity: 0

